{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "preserve",
        "baseUrl": "./src",
        "outDir": "./dist/typings",
        "paths": {
            "components/*": ["components/*"],
            "constants/*": ["constants/*"],
            "definitions/*": ["types/*"],
            "examples/*": ["examples/*"],
            "react-subscribe-context/*": ["react-subscribe-context/*"],
            "utils/*": ["utils/*"]
        },
        "sourceMap": true,
        "declaration": true
    },
    "include": ["src/react-subscribe-context"],
    "exclude": ["src/**/*test*"]
}
